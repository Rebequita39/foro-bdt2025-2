
{
  "watch": [
    "server.js",
    "config/",
    "controllers/",
    "middleware/",
    "models/",
    "routes/",
    ".env"
  ],
  "ignore": [
    "node_modules/",
    "public/",
    "uploads/",
    "*.log",
    ".git"
  ],
  "ext": "js,json,env",
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "delay": 1000,
  "verbose": true
}